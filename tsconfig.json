{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "ES6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "skipLibCheck": true
    },
    "lib": ["es2021"],
    "exclude": ["node_modules"],
    "include": ["./src/**/*.ts"]
}
